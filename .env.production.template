# Production Environment Configuration for Hostinger Deployment
# Copy this file to .env and fill in your actual values

# App Settings
DEBUG=False
APP_NAME="Luggage Monitoring System"

# MySQL Database Configuration (Hostinger)
# Format: mysql+pymysql://username:password@host:port/database_name
# Example: DATABASE_URL=mysql+pymysql://u123456_luggage:YourPassword@localhost:3306/u123456_luggage_db
DATABASE_URL=mysql+pymysql://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_DB_HOST:3306/YOUR_DB_NAME

# Video Processing Settings
FRAME_SKIP=20
CONFIDENCE_THRESHOLD=0.5
MAX_VIDEO_SIZE_MB=500

# YOLO Model Settings
YOLO_MODEL=yolov8m.pt
YOLO_DEVICE=cpu
POSE_MODEL=yolov8m-pose.pt

# Luggage Detection Settings
ABANDONMENT_THRESHOLD=10.0
OWNER_PROXIMITY_DISTANCE=150
STATIONARY_THRESHOLD=20
MIN_LUGGAGE_CONFIDENCE=0.5

# Google Gemini API (for LLM queries)
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY

# CORS Settings (Update with your production domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Alert Configuration
ENABLE_EMAIL_ALERTS=True
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# Anomaly Detection Settings
ANOMALY_EMAIL_COOLDOWN=0
ANOMALY_SEVERITY_THRESHOLD=high

# Face Analysis Settings (optional)
ANALYZE_FACES=False
FACE_ANALYSIS_INTERVAL=5
FACE_DETECTOR_BACKEND=opencv
